<!DOCTYPE html>
<html>
  <head>
    <title>TestEventApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="menu">
    <%= button_to "View All Events", events_path, method: :get %>
    <%= button_to "View All Artists", artists_path, method: :get %>
    <% if !!current_user %>
        <%= button_to "Logout", logout_path, method: :delete, data: {confirm: "Are you sure you want to logout?"}  %>
       <% else %>
        <%=button_to "Login", login_path, method: :get  %>
       <% end %>
    </div>
    <%= yield %>
  </body>
</html>
