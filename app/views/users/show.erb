<h1> <%= @user.username %> </h1>

<div class="page">

<div class="user-info">

  <% if flash[:new_error] %>
  <h2> <%= flash[:new_error] %></h2><br>
  <% end %>

  <b>Name:</b> <%= @user.first_name %> <%= @user.last_name %> <br>
  <b>City:</b> <%= @user.city %><br>
</div>


  <div class="user-shows">

    <p class="tic-to-see"> <%= @user.username %> has tickets to see: </b> </p>
      <ol>
      <% @user.tickets.all.select {|t| t.event.show_date > Date.today}.each do |e| %>
      <a class="event-container" href=<%= event_path(e) %>>

      <li class="user-show-events"> <%= e.event.artist.name  + " at " +  e.event.venue.name %> on <%= e.event.date_display %></li>
      <% end %>
    </ol>
  </a>
    <br>
